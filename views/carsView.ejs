      background-size: cover;
      font-family: "Gill Sans", "Gill Sans MT", Calibri, sans-serif;
      margin: 0;
      padding: 0;
    }
    .box {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      margin: 64px;
      padding: 32px;
      font-size: 32px;
    }
    .box span {
      margin: 10px;
    }
