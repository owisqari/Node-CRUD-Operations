  <body>
    <div class="h-25">
      <div class="box">
        <h1 style="font-size: 80px">cars</h1>
        <span>
          <i class="fa-solid fa-angles-down fa-fade fa-2xl"></i>
        </span>
      </div>
    </div>

    <div class="h-50 d-flex align-items-center justify-content-center">
      <form action="/carsView" method="post">
        <div class="input-group input-group-lg">
          <div class="input-group mb-3">
            <input
              name="carName"
              type="text"
              class="form-control"
              placeholder="Car Name"
              required
            />
            <span class="input-group-text"></span>
            <input
              name="model"
              type="text"
              class="form-control"
              placeholder="Car Model"
              required
            />
          </div>

          <div class="input-group">
            <span class="input-group-text"></span>
            <input
              class="form-control"
              placeholder="Driver Name"
              name="driverName"
              type="text"
              required
            ></input>
          </div>
          <div>
            <button class="btn btn-primary" type="submit">submit</button>
          </div>
        </div>
      </form>
    </div>

    <div class="h-25 d-flex align-items-center justify-content-center mr-3">
        <form action="carsView" method="get">
          <% for(x of cars) { %>
          <div
            class="card text-bg-light mb-lg-3 card shadow-lg p-3 mb-5 bg-body rounded m-lg-auto "
            style="width: 18rem"
          >
            <div class="card-body">
              <h5 class="card-title"><%= x.name%></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= x.model%></h6>
              <p class="card-text"><%= x.driverName%></p>
            </div>
          </div>
          <% } %>
        </form>
      </div>
    <!-- BOOTSTRAP -->
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
